


@{
    string status = ViewData["StatusCode"].ToString();
    string origUrl = ViewData["OrigUrl"].ToString();
    string method = ViewData["Method"].ToString();
}

<!DOCTYPE html>

<html>
<head>
    <title>Error @status</title>
    <link rel="stylesheet" href="~/css/errorPage.css"/>
</head>
<body>
<div class="container">
    <h2>Error @status</h2>
    <p>@method: @origUrl не поддерживается</p>
</div>
</body>
</html>