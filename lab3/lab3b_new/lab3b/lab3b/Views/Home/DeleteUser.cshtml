@model UserViewModel
@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}
<h2>Удалить пользователя</h2>
@if (@Model.isActionSuccess)
{
    <div id="successAlert" class="alert alert-success" role="alert">
        Пользователь успешно удален!
    </div>

    <script>
        setTimeout(function () {
            document.getElementById('successAlert').style.display = 'none';
        }, 3000); // Скрыть через 3 секунды (3000 миллисекунд)
    </script>
}
else if(@Model.errorMessage!=null)
{
    <div id="warningAlert" class="alert alert-warning" role="alert">
        @Model.errorMessage
    </div>

    <script>
        setTimeout(function () {
            document.getElementById('warningAlert').style.display = 'none';
        }, 3000); // Скрыть через 3 секунды (3000 миллисекунд)
    </script>
}
<form asp-action="DeleteUser" method="post">
    <div class="form-group">
        <label for="del-user">User: </label>
        <input class="form-control" name="userId" id="del-user" type="text" placeholder="Enter user ID"/>
    </div>
    <button type="submit" class="btn btn-primary m-2">Удалить</button>
</form>
<div>
    <table class="table">
        <tr><th scope="col">#</th><th scope="col">Id</th><th scope="col">Email</th></tr>
        @{ var counter = 1; }
        @foreach (var user in @Model.userList)
            {
                <tr><td>@counter</td><td>@user.Id</td><td>@user.Email</td></tr>
                counter++;
            }
    </table>
</div>